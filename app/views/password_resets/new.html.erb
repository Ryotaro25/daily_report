<% provide(:title, "Forget password") %>
  <h1>パスワードを再設定</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 form">
      <%= form_with(url: password_resets_path, scope: :password_reset, local: true) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
  
        <%= f.submit "パスワード再設定用のメールを送信", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>