<% provide(:title, 'Sign up') %>
<div class="container fill_form">
  <div class="row">
    <div class="col-md-7 col-md-offset-2 form new_form">
    <h1 class="subtitle">アカウント登録</h1>
      <%= form_with(model: @user, local:true ) do |f| %>
        <br><%= render 'shared/error_messages', object: f.object %>

        <%= f.label :名前 %>
        <%= f.text_field :name, class: 'form-control', size: 200 %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :パスワード　, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <br><%= f.submit "アカウントを作成する", class: "btn btn-default" %>
      <% end %>
    </div>

  </div>
</div>  