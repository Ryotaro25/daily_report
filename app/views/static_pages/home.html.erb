<% provide(:title, "home") %>
<% if logged_in? %>
　<div>
  　<h3><%= gravatar_for current_user %> <%= current_user.name %></h3>
  </div> 
  <div class="row">
    <aside class="col-md-offset-1 col-md-4" style="width:50%;">
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-offset-1 col-md-4 chart" style="width:50%;">
        <h3 class="subtitle">部署比較</h3>
        <%= pie_chart(@pie_chart) %>
      </div>
      <div class="col-md-12">
        <h3 class="subtitle">日報</h3>
        <%= render 'shared/feed' %>
      </div>
  </div>
<% else %>
  <header class="bg-primary text-white">
    <div class="container text-center">
      <h1>Daily Report</h1>
      <p class="lead">リアルタイムな情報共有</p>
    </div>
  </header>

  <section id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <%= link_to "ゲストログイン", guest_sessions_path, method: :post, class:"btn btn-outline-primary btn-lg" %>
        </div>
      </div>
    </div>
  </section>
<% end %>