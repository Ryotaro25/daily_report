<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Daily Work Report</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="http://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">　
    <script src="http://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript">
　　</script>  
　　<script src="http://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
　　<script src="http://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
　　<script src="http://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
　　<style type="text/css">
    <!--
    a:link  { color : #000000; }
    a:visited  { color : #000000; }
    -->
    </style>
    <%= javascript_pack_tag 'hello_vue' %>
　　<%= stylesheet_pack_tag 'hello_vue'  %> 
  </head>
  <body>
    <%= render 'layouts/header' %>
      <div class="main_body">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>  
        <%= yield %>
        <%= debug(params) if Rails.env.development? %>
      </div>
    <footer>
      <%= render 'layouts/footer' %> 
    </footer>
</html>
