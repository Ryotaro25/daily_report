<div class="fill_form">
  
  <div class="row">
    <div class="col-md-7 col-md-offset-2 login_form">
      <h1 class="small_title subtitle">ログイン</h1>
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <br><%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        <%= f.label :パスワード %>
        <%= link_to "パスワードを忘れた方はこちら", new_password_reset_path, class: "link" %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>ログイン状態を保存</span>  
        <% end %>
        <%= f.submit "ログイン", class: "btn btn-default" %>
      <% end %>      
      <br><p class="link"><%= link_to "アカウント作成はこちらから", signup_path, class: "link" %></p>
    </div>
  </div>  
</div>  