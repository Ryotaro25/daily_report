<div class="col-md-3 post">
  <div id="micropost-<%= micropost.id %>" class="post_content">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span>
      <p class="title">タイトル：<%= micropost.title %></p>
    </span>
    <span>
      <p class="title">活動時間:
        <%= micropost.start_time.strftime("%H:%M") %> ~
        <%= micropost.finish_time.strftime("%H:%M") %>
      </p>
    </span>
    <span class="content">
      <p class="title">
      <%= micropost.content %>
      </br>
      <% if micropost.image.attached? %>
        <%= link_to micropost.image, "data-lightbox" => micropost.display_image do %>
          <%= image_tag micropost.display_image %>
        <% end %>  
      <% end %>  
      </p>
    </span>
    </br>
    <span class="content"><%= time_ago_in_words(micropost.created_at) %>前に投稿されました.</span> 
    </br>
    <span class="links">
      <li id="detail" class="detail_position">
        <%= link_to("レポート詳細", micropost) %>
        <%= render "likes/like", micropost: micropost %>
      </li>
    </span>
  </br>
  </div>
</div>
